export HOSTNAME=$(hostname)
export FQDN=$(hostname -f)
export IP=$(/sbin/ip -o -4 addr list eth0 | awk '{print $4}' | cut -d/ -f1)
export DHCP_TEST=$(grep IP /etc/netctl/ethernet-dhcp | grep -v '^#')
#export DATE=$(date "+%b %d, %Y")
#export TIME=$(date "+%I:%M %p")



# Verify DHCP Setting

check_dhcp() {
echo $DHCP_TEST
if [ $DHCP_TEST == 'IP=dhcp' ]; then
	echo Good!
else	
	echo Fix DHCP setting.
fi
}

# Verify Hostname


check_hostname() {
if [ "$HOSTNAME" = "$FQDN" ]
then
	echo $HOSTNAME is not fully qualified
	echo Please run "hostnamectl set-hostname $HOSTNAME.theatre.reg"
	echo Then run /home/benja/app/scripts/registerdns.sh
else	
	echo $HOSTNAME is fully qualified.
fi
}

# Date, Time and NTP settings

check_time() {
timedatectl
}
